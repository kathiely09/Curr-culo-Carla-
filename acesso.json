 import json
 import os
 import hashlib

 ARQUIVO = "acesso.json"

 def sha256(texto: str) -> str:

return hashlib.sha256(texto.encode("utf-8")).hexdigest()

 def carregar_usuarios():

if not os.path.exists(ARQUIVO):

